# vim: set ft=gitconfig:

[core]
    filemode = false
    pager = "delta"

[diff]
    colorMoved = default

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only
    singleKey = true

[merge]
    conflictStyle = zdiff3

[pull]
    ff = only

[rebase]
    autoStash = true
    updateRefs = true

[status]
    branch = true

[delta]
    dark
    # navigate = true  # wait: https://github.com/dandavison/delta/issues/237
    file-style                      = blue bold
    map-styles                      = bold purple => syntax "#3C2740", bold cyan => syntax "#2E3242"  # Moved lines.
    minus-style                     = syntax "#663B63"
    minus-emph-style                = syntax "#522B4F"
    minus-empty-line-marker-style   = normal "#663B63"
    plus-style                      = syntax "#313E52"
    plus-emph-style                 = syntax "#40516B"
    plus-empty-line-marker-style    = normal "#313E52"
    # plus-style                    = syntax "#3B3152"  # a more purply color
