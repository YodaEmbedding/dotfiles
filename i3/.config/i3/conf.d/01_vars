# Main modifier keys
set $mod  Mod4
set $mod_ Mod1

# Named workspaces
#               
#  
#   # ひ
#   # ほん
set $ws1   "1:火"
set $ws2   "2:"
set $ws3   "3:本"
set $ws4   "4:"
set $ws5   "5:五"
set $ws6   "6:六"
set $ws7   "7:七"
set $ws8   "8:"
set $ws9   "9:"
set $ws10  "10:10"
set $ws666 "666:"

# Key codes
set $kp_ins 118

# Flags
set $nsi            --no-startup-id

# Scripts paths
set $scripts        ~/.config/i3/scripts

# Wallpaper paths

set $wallpaper      --no-fehbg --randomize /mnt/data/Dropbox/media/pics/wallpaper/usr-share-backgrounds/desktop
set $lock_wallpaper /mnt/data/Dropbox/media/pics/wallpaper/usr-share-backgrounds/current_lock.png

# Download frece scripts from https://github.com/SicariusNoctis/frece
set $rofi_app       rofi -combi-modi drun,run -show combi -modi combi
set $rofi_book      ~/.config/frece/scripts/book_rofi.sh    -i
set $rofi_command   ~/.config/frece/scripts/command_rofi.sh -i
set $rofi_dir       ~/.config/frece/scripts/dir_rofi.sh     -i
set $rofi_emoji     ~/.config/frece/scripts/emoji_rofi.sh   -i
set $rofi_file      ~/.config/frece/scripts/file_rofi.sh    -i
set $rofi_torr      ~/.config/frece/scripts/torr_rofi.sh    -i
set $command_last   ~/.config/frece/scripts/command_latest.sh
set $rofi_bground   ~/.config/frece/scripts/bground_rofi.sh -i

# Sound control
set $amixer         amixer -q -D pulse set Master
set $vol_change     pkill -SIGRTMIN+1 i3blocks
set $cycle_pa_sink  ~/dotfiles/i3/.config/i3/scripts/pa_set_default_sink

# Screenshot path
set $screen_base    $HOME/Downloads
set $screen_path    $HOME/Downloads/$(date '+%Y-%m-%d  %H-%M-%S  %3N.png')

# Window size
set $screen_size    1920 1080
set $video_size     752 423

