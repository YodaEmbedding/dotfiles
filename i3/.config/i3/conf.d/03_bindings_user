# Mouse scroll wheel (fast scrolling)
bindsym --whole-window --border $mod+Button4    exec "xdotool click --clearmodifiers --repeat 2 --delay 10 4 mouseup --clearmodifiers 4"
bindsym --whole-window --border $mod+Button5    exec "xdotool click --clearmodifiers --repeat 2 --delay 10 5 mouseup --clearmodifiers 5"

# Dropdown terminal
bindsym $mod+q                  [instance="^dropdown$"] scratchpad show, fullscreen disable
bindsym $mod+ctrl+q             [instance="^dropdown$"] scratchpad show, fullscreen enable

# Floating fullscreen
bindsym $mod+ctrl+s             focus mode_toggle, fullscreen enable

# rofi (app launcher, sudo app launcher, file search, folder search, emoji, window jumper)
bindsym $mod+space              exec "$rofi_app     -p 'run'"
bindsym $mod+w                  exec "$rofi_app     -p 'run'"
bindsym $mod+ctrl+w             exec "$rofi_app     -p 'run (sudo)' -run-command 'gksudo {cmd}'"
bindsym $mod+e                  exec "$rofi_command -p 'command'"
bindsym $mod+ctrl+d             exec "$rofi_dir     -p 'folders'"
bindsym $mod+ctrl+shift+e       exec "$rofi_emoji   -p 'emojis'"
bindsym $mod+d                  exec "$rofi_file    -p 'files'"
bindsym $mod+shift+b            exec "$rofi_book    -p 'books'"
bindsym $mod+shift+w            exec "$rofi_bground -p 'wallpapers'"
bindsym $mod+shift+d            exec "$rofi_torr    -p 'torr'"

# Restart polybar
bindsym $mod+ctrl+r             exec $nsi ~/.config/polybar/polybar.sh

# Wallpaper
bindsym $mod+$mod_+w            exec $nsi feh --bg-fill $wallpaper

# Screenshot (select, select + edit, select + copy, full, active, preview latest)
bindsym            Print        exec $nsi maim -u -s "$screen_path"
bindsym      shift+Print        exec $nsi "f=$screen_path && maim -u -s \\"$f\\" && gthumb \\"$f\\""
bindsym $mod+shift+Print        exec $nsi "f=$screen_path && maim -u -s \\"$f\\" && xclip -selection clipboard -t image/png <\\"$f\\""
bindsym       ctrl+Print        exec $nsi maim -u "$screen_path"
bindsym  $mod+ctrl+Print        exec $nsi maim -u -i $(xdotool getactivewindow) "$screen_path"
bindsym       $mod+Print        exec $nsi xdg-open "$(ls -t $screen_base/*.png | head -1)"

# Screencapture
# TODO

# Color picker
bindsym $mod+p                  exec $nsi gcolor2

# Downloads
bindsym $mod+t                  exec thunar ~/Downloads
bindsym $mod+shift+t            exec thunar ~/Downloads/screenshots

# Redshift control
bindsym $mod+m                  exec $nsi $scripts/rs $(($(cat ~/.cache/rshift) + 200))
bindsym $mod+shift+m            exec $nsi $scripts/rs $(($(cat ~/.cache/rshift) - 200))
bindsym $mod+ctrl+m             exec $nsi $scripts/rs 5500
bindsym $mod+ctrl+shift+m       exec $nsi $scripts/rs 6500

