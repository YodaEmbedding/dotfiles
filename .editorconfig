root = true

[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[{*.py}]
indent_size = 4
indent_style = space
# max_line_length = 79

[{*.js,*.jsx,*.lua,*.sh}]
indent_size = 2
indent_style = space

[{Makefile,*.mk}]
indent_style = tab
