; polybar config file
; vim:ft=dosini

[bar/top]
width = 100%
height = 24

background = #ff221133
foreground = #ccfdfdff
line-color = ${bar/top.foreground}
line-size = 2
module-margin = 2
padding-right = 2

font-0 = NotoSansCJKjp-Regular:size=10;2
font-1 = FontAwesome5Free:style=Solid:size=10;2
font-2 = FontAwesome5Brands:style=Solid:size=10;2
font-3 = MaterialIcons:size=10;3
font-4 = NotoSansMono-Regular:size=10;2
font-5 = NotoSans-Regular:size=10.0;0

tray-background = #221133
tray-position = right

modules-left = i3 mpris preview
modules-center = title
modules-right = network ping updates memory cpu temperature pulseaudio date

scroll-up = i3wm-wsprev
scroll-down = i3wm-wsnext
click-middle = i3-msg "kill"
click-right = i3-msg "kill"

[module/i3]
type = internal/i3
format = <label-state>
label-focused-background = #aa3366
label-focused-foreground = #eeccdd
label-unfocused-background = #552244
label-unfocused-foreground = #88777f
label-focused-padding = 2
label-unfocused-padding = 1
strip-wsnumbers = true
wrapping-scroll = false

;[module/progress]
;type = custom/script
;exec = ~/.config/polybar/scripts/progress
;interval = 5

; [module/gpmdp]
; type = custom/script
; exec = ~/.config/i3blocks/scripts/gpmdp --layout A-t-p
; interval = 10
; format-foreground = #8CE000

[module/mpd]
type = internal/mpd
host = localhost
port = 6600
interval = 10
format-online = <label-time> <label-song>
format-online-foreground = #CCAADD
; format-online-foreground = #AA88BB
; format-online-foreground = #9988AA
label-song = %artist:0:20% - %title%
label-song-maxlen = 70
label-time = (%elapsed%/%total%)
format-online-font = 6

[module/mpris]
type = custom/script
exec = ~/.config/polybar/scripts/player-mpris-tail.py -f '{:t20:{artist}:} - {:t70:{title}:}'
tail = true
format-foreground = #CCAADD
format-font = 6
click-left = playerctl play-pause

[module/preview]
type = custom/script
exec = tmux capture-pane -p -t "0:1.1" | tac | egrep -m 1 . | sed -e 's/^[ \t]*//'
interval = 1
label = %output:0:16:...%
format-foreground = #9977AA
label-font = 6

[module/title]
type = internal/xwindow
label-maxlen = 60

[module/updates]
type = custom/script
exec = ~/.config/polybar/scripts/updates-arch-combined.sh
interval = 43200
format-prefix = "つつみ"

[module/bandwidth]
type = custom/script
exec = ~/.config/i3blocks/scripts/bandwidth
interval = 1
format-foreground = #66cc00
format-font = 5

[module/network]
type = internal/network
interface = enp2s0
label-connected =  %downspeed:6:6%  %upspeed:6:6%
format-connected-foreground = #66cc00
format-connected-font = 5

[module/ping]
type = custom/script
exec = ~/.config/polybar/scripts/ping 1.1.1.1
;exec = ~/.config/polybar/scripts/ping 8.8.8.8
;exec = ~/.config/polybar/scripts/ping 104.160.131.3
interval = 60

[module/filesystem]
type = internal/fs
interval = 30
label-mounted =  %free%
mount-0 = /

[module/memory]
type = internal/memory
interval = 5
format-prefix = "きおく"
label = %gb_used:1:2%
fixed-values = true

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = "しごと"
label = %percentage:02%

[module/temperature]
type = internal/temperature
interval = 5
format-prefix = "あつい"
label = %temperature:0:3%
label-warn-foreground = #ff7777
warn-temperature = 60

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%
label-muted =   M
label-muted-foreground = #666666
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
click-middle = catia &
click-right = pavucontrol &

[module/date]
type = internal/date
date = 今  %y-%m-%d  %H:%M:%S
date-alt = %A, %d %B %Y  %H:%M:%S

