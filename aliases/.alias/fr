# List of french aliases
francais() {
  grep -e "^alias" ~/.alias/fr | \
    sed -ne "s/^alias \([a-zA-Z]\{1,\}\)='\(.*\)'[[:space:]]\{1,\}# \([^#]\{1,\}\)$/\2#\1#\3/p" \
    | sort | column -t -s '#'
}

fr() {
  francais | fzf
}
