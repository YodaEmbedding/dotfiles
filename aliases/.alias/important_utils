### IMPORTANT UTILITIES ###

# git
alias g='git'
alias ga='git add'
alias gap='git add -p'
alias gb='git checkout -B'
alias gc='git commit'
alias gca='git commit -a'
alias gcam='git commit -am'
alias gcl='git clone'
alias gcm='git commit -m'
alias gco='git checkout'
alias gd='git diff'
alias gds='git diff --staged'
alias gl='git log --graph --full-history --color --oneline --branches --remotes --tags'
alias gla='git log --graph --decorate $(git rev-list -g --branches --remotes --tags)'
alias gp='git push'
alias gpl='git pull'
alias gplr='git pull --rebase'
alias gr='git rebase'
alias gre='git reset'
alias gs='git status'
alias gsh='git show'

# less
alias less='less -r'

# python
alias py="python3"

# rsync
alias rsync="rsync -h"
alias rscp="rsync -a --info=progress2 --partial"

# tmux
alias tm="tmux"

# vim
alias v='nvim'
alias vim='nvim'
alias vimprivate='vim -u NONE -c "setlocal history=0 nobackup nomodeline noshelltemp noswapfile noundofile nowritebackup secure viminfo=\"\""'
