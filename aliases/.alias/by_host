### BY HOST ###

HOSTNAME="$(hostname)"

if [[ "$HOSTNAME" == "PC-Mordor-Arch" ]]; then
  alias porpt="porp train.py --config-path=$HOME/code/research/conf --config-name=root paths=pc-mordor"
fi

if [[ "$HOSTNAME" == *computecanada.ca ]]; then
  cluster_name() {
    local CLUSTER="unknown"
    if [[ "$HOSTNAME" == *beluga.computecanada.ca ]]; then
      CLUSTER="beluga"
    elif [[ "$HOSTNAME" == *cedar.computecanada.ca ]]; then
      CLUSTER="cedar"
    elif [[ "$HOSTNAME" == *graham.computecanada.ca ]]; then
      CLUSTER="graham"
    elif [[ "$HOSTNAME" == *narval.computecanada.ca ]]; then
      CLUSTER="narval"
    fi
    echo "$CLUSTER"
  }
  export CC_CLUSTER_NAME="$(cluster_name)"
  alias porpt="porp train.py --config-path=$HOME/code/research/conf --config-name=root paths=computecanada ++paths._cluster=$CC_CLUSTER_NAME"
fi
